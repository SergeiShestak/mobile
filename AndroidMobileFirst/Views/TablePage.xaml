<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidMobileFirst.Views.TablePage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Data Table" 
                   Style="{StaticResource Headline}" 
                   SemanticProperties.HeadingLevel="Level1" />

            <TableView>
                <TableRoot>
                    <TableSection Title="Sample Data">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Row 1, Column 1" />
                                <Label Text="Row 1, Column 2" />
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Row 2, Column 1" />
                                <Label Text="Row 2, Column 2" />
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Row 3, Column 1" />
                                <Label Text="Row 3, Column 2" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>